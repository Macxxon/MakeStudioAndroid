<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_info_bills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AÃ±adir Gastos"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edt_reference"
        android:layout_width="413dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:hint="Concepto"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_info_bills" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edt_value"
        android:layout_width="413dp"
        android:layout_height="48dp"

        android:layout_marginTop="24dp"
        android:hint="Valor"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="10"
        app:layout_constraintTop_toBottomOf="@+id/edt_reference"
        tools:layout_editor_absoluteX="-2dp" />

    <Spinner
        android:id="@+id/spinner_choose_user_bill"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_value" />

    <Button
        android:id="@+id/btn_save_bill"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:width="16dp"
        android:height="15dp"
        android:text="Guardar"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_choose_user_bill" />


</androidx.constraintlayout.widget.ConstraintLayout>